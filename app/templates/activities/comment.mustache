<div class="media" {{#subject}}id="{{anchor}}"{{/subject}}>
  <div class="pull-left">
    <div class="marker icon marker-default icon-speach-bubble">
      <span class="icon icon-right-chevron"></span>
    </div>
  </div>

  <div class="media-body">
    <div class="media-heading omega">

      {{#actor}}
        <a href="{{url}}" title="@{{username}}">@{{username}}</a>
      {{/actor}}

      commented on

      {{#target}}
      <a class="long-link" href="{{url}}{{#subject}}#{{anchor}}{{/subject}}">
        {{title}}
      </a>
      <a class="text-muted" href="{{url}}{{#subject}}#{{anchor}}{{/subject}}">
        #{{number}}
      </a>
      {{/target}}
    </div>
  </div>
</div>
