<div class="media">

  <div class="pull-left">
    <div class="marker marker-blue">
      <span class="icon icon-pull-request"></span>
    </div>
  </div>

  <div class="media-body">
    <div class="media-heading omega">
      <div class="activity-body">
        <div class="activity-actions">
          <ul class="list-inline omega text-muted">
            <li>
              {{#actor}}
                <a href="{{url}}">{{username}}</a>
              {{/actor}}
              pushed a
              {{#subject}}
                <a target="_blank" href="{{url}}">commit</a>
              {{/subject}}
            </li>
            {{#id}}
              <li>
                <div class="js-tips"
                     data-tips-to="{{#actor}}{{username}}{{/actor}}"
                     {{#target}}
                       data-tips-path="{{url}}/tips"
                       data-tips-product-id="{{id}}"
                     {{/target}}>
                </div>
              </li>
            {{/id}}
          </ul>

          {{#subject}}{{#metadata}}
            <div class="well well-sm media-object omega text-left" style="color: #393939; text-align: left; background-color: #fff">
              {{message}}
            </div>
          {{/metadata}}{{/subject}}
        </div>
      </div>
    </div>
  </div>
</div>
