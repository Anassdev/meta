<div class="media">

  <div class="pull-left">
    <div class="marker marker-blue">
      <span class="icon icon-pull-request"></span>
    </div>
  </div>

  <div class="media-body">
    <div class="media-heading omega">
      <div class="activity-body">
        <div class="activity-actions">
          <ul class="list-inline omega">
            <li class="text-muted">
              {{#actor}}
                <a href="{{url}}">{{username}}</a>
              {{/actor}}
              pushed a
              {{#subject}}
                <a target="_blank" href="{{url}}">commit</a>
              {{/subject}}
            </li>
            {{#id}}
              <li>
                <div class="js-tips"
                     data-tips-to="{{#actor}}{{username}}{{/actor}}"
                     {{#target}}
                       data-tips-path="{{url}}/tips"
                       data-tips-product-id="{{id}}"
                     {{/target}}>
                </div>
              </li>
            {{/id}}
          </ul>

          {{#subject}}{{#metadata}}
            <div class=" card omega" style="margin-top: 6px; text-align: left; font-size: 16px; padding: 8px 10px;">
              <code>
                {{message}}
              </code>
            </div>
          {{/metadata}}{{/subject}}
        </div>
      </div>
    </div>
  </div>
</div>
