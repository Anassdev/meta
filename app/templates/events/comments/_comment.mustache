<div class="timeline-item timeline-highlight" id="{{anchor}}">
  <div class="media hover-toggle-wrapper">

    <div class="pull-left">
      {{#actor}}
        <a href="{{url}}" title="{{username}}">
          <img class="media-object img-circle" src="{{avatar_url}}" alt="@{{username}}" width="30" height="30">
        </a>
      {{/actor}}
    </div>

    <div class="media-body">
      <div class="media-heading">

        <div class="pull-right hover-toggle-target">
          <ul class="list-piped omega">

            {{#current_user_can_tip}}
              <li>

                <div class="timeline-entry-tipping"
                  data-view="tips"
                  data-tips-increment="100"
                  data-tips-total="{{total_tips}}"
                  data-tips-url="{{tip_path}}">

                  <span class="text-primary" style="margin-right:5px">
                    <a class="btn btn-default btn-xs" style="cursor:pointer" class="js-add-tip">
                      +Tip
                    </a>
                  </span>

                  <span class="icon icon-app-coin"></span>
                  <span class="js-total-tips">{{total_tips}}</span>
                </div>
              </li>
            {{/current_user_can_tip}}
            {{#award_url}}
              <li class="text-success">
                <a href="{{award_url}}?event_id={{id}}" data-method="patch" data-confirm="Are you sure you want to award this task to {{#actor}}@{{username}}{{/actor}}?">
                  Award {{#actor}}@{{username}}{{/actor}}
                </a>
              </li>
            {{/award_url}}
            {{#edit_url}}
              <li>
                <a href="{{edit_url}}">Edit</a>
              </li>
            {{/edit_url}}
            {{#anchor}}
            <li>
              <a href="#{{anchor}}" title="Permalink">
                <span class="glyphicon glyphicon-link"></span>
              </a>
            </li>
            {{/anchor}}
          </ul>

          <!-- Award buttons -->
        </div>

        {{#actor}}
          <a href="{{url}}" title="@{{username}}">{{username}}</a>
          wrote:
        {{/actor}}
      </div>

      <div class="markdown-normalized">{{{body_html}}}</div>

