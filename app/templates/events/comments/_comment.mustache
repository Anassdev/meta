<div class="timeline-item timeline-highlight" id="comment-{{number}}">
  <div class="media hover-toggle-wrapper" id="{{anchor}}">

    <div class="pull-left">
      {{#actor}}
        <a href="{{url}}" title="{{username}}">
          <img class="media-object img-circle" src="{{avatar_url}}" alt="@{{username}}" width="30" height="30">
        </a>
      {{/actor}}
    </div>

    <div class="media-body">
      <div class="media-heading">

        <div class="pull-right hover-toggle-target">
          <a href="#{{anchor}}" title="Permalink">
            <span class="glyphicon glyphicon-link"></span>
          </a>

          <!-- Award buttons -->
        </div>

        {{#actor}}
          <a href="{{url}}" title="@{{username}}">{{username}}</a>
          wrote:
        {{/actor}}
      </div>

      {{{body_html}}}

      <div class="media-footer">
        <!-- Tips! -->
        Tips!
      </div>
    </div>

  </div>

  <img class="hidden" src="{{readraptor_tracking_url}}" width="0" height="0">
</div>
