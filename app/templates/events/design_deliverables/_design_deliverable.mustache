<div class="timeline-item">
  <div class="media">
    <div class="pull-left">
      <div class="marker marker-blue">
        <span class="icon icon-document"></span>
      </div>
    </div>

    <div class="media-body">
      <div class="media-heading">
        {{#actor}}
          <a href="{{url}}">{{username}}</a>
        {{/actor}}
        submitted a design
          <a target="_blank" href="{{href}}">{{name}}</a>
      </div>

      {{#attachment}}
        <a href="{{href}}">
          <img class="gallery-thumb" src="{{firesize_url}}/300x225/frame_0/g_center/{{href}}" />
        </a>
      {{/attachment}}


      {{#award_url}}
        <a class="event-award pull-right" href="{{award_url}}?event_id={{id}}" data-method="patch" data-confirm="Are you sure you want to award this task to {{#actor}}@{{username}}{{/actor}}?">
          <span class="glyphicon glyphicon-star"></span>
          Award {{#actor}}@{{username}}{{/actor}}
        </a>
      {{/award_url}}
    </div>
  </div>
</div>
