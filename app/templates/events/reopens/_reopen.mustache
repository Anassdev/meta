<div class="timeline-item">
  <div class="media">
    <div class="pull-left">
      <div class="marker marker-green">
        <span class="glyphicon glyphicon-open"></span>
      </div>
    </div>

    <div class="media-body">
      <div class="media-heading omega">
        Re-opened by
        {{#actor}}
          <a href="{{url}}">{{username}}</a>
        {{/actor}}
      </div>

      <div class="markdown-normalized">{{{body_html}}}</div>
    </div>
  </div>
</div>
