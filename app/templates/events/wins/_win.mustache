<div class="timeline-item">
  <div class="media">
    <div class="pull-left">
      <div class="marker marker-green">
        <span class="icon icon-star"></span>
      </div>
    </div>

    <div class="media-body">
      <div class="media-heading omega">
        {{#target}}
          <a href="{{url}}">{{username}}</a>
        {{/target}}
        was awarded this by
        {{#actor}}
          <a href="{{url}}">{{username}}</a>
        {{/actor}}
      </div>
    </div>
  </div>
</div>
