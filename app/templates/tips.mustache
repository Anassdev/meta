<div class="{{#any_coins?}}text-coins{{/any_coins?}}">
  <a href="{{path}}"
    data-placement="top"
    {{^signed_in?}}
      data-toggle="tooltip"
      title="You need to sign up before you can tip"
    {{/signed_in?}}
    {{^current_user_has_coins?}}
      data-toggle="tooltip"
      title="You have no coins to tip"
    {{/current_user_has_coins?}}
  >
    <i class="icon icon-app-coin"></i>
    {{coins}}
  </a>

  {{#any_coins?}}
    <span class="text-muted hidden">&mdash; tipped by
      <ul class="list-inline-media">
        {{#tips}}
          <li>
            <img
              class="img-circle"
              src="http://placekitten.com/g/300/300"
              alt="@"
              width="16" height="16">
          </li>
        {{/tips}}
      </ul>
    </span>
  {{/any_coins?}}

</div>
