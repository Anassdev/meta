<div class="card">
  <div class="card-body">
    <!-- <h6 class="text-muted alpha omega">Bounty</h6> -->
    <h5 class="alpha">
      <span class="icon icon-trophy icon-left text-muted"></span>
      <%= bounty.title %>
    </h5>
    <p class="text-muted omega">
      <%= truncate(bounty.description, length: 84) %>
    </p>
  </div>
  <div class="card-footer text-muted small">
    <ul class="list-inline omega">
      <li>
        <span class="text-coins">
          <span class="icon icon-app-coin"></span>
          <%= number_with_delimiter(bounty.value) %>
        </span>
      </li>
      <li>
        <span class="glyphicon glyphicon-comment"></span>
        <%= number_with_delimiter(bounty.comments_count) %>
      </li>
    </ul>
  </div>
</div>
