<div>
  <div class="mb2">
    <a href="<%= product_wip_path(bounty.product, bounty) %>">
      <strong>
        <%= bounty.title %>
        <span class="gray-dark ml1">#<%= bounty.number %></span>
      </strong>
    </a>
  </div>

  <div>
    <% if bounty.open? %>
      <div class="pull-right">
        <%= render partial: 'bounties/urgency', locals: { task: bounty } %>
      </div>
    <% end %>

    <span class="mr2">
      <% if !bounty.product.meta? %>
        <% case %>
        <% when bounty.state == 'open' || (bounty.state == 'reviewing' && bounty.workers.empty?) %>
          <span class="text-warning" data-toggle="tooltip" title="Available">
        <% when bounty.workers.any? && (bounty.state != 'resolved') %>
          <span class="text-warning" data-toggle="tooltip" title="<%= pluralize(bounty.workers.count, 'person') %> working">
        <% when bounty.state == 'resolved' %>
          <% if bounty.winners.any? %>
              <% bounty.winners.each do |winner| %>
                <span class="text-muted" data-toggle="tooltip" title="Awarded to @<%= winner.username %>">
              <% end %>
          <% else %>
            <span class="text-muted" data-toggle="tooltip" title="Closed">
          <% end %>
        <% end %>
          <% if bounty.state == 'resolved' && !bounty.winner.present? %>
            <span class="icon icon-app-coin"></span>
            <span><%= number_with_delimiter(WipContracts.new(bounty, @auto_tip_contracts).earnable_cents.floor) %></span>
          <% else %>
            <span class="icon icon-app-coin"></span>
            <span class="js-coins"><%= number_with_delimiter(WipContracts.new(bounty, @auto_tip_contracts).earnable_cents.floor) %></span>
          <% end %>
        </span>
      <% end %>
    </span>

    <span class="gray-dark bold mr2">
      <span class="icon icon-speech icon-left"></span>
      <%= bounty.comments_count %>
      <span class="sr-only">comments</span>
    </span>

    <span>
      <% bounty.tags.each do |tag| %>
        <a class="caps gray bold mr1" href="<%= product_wips_path(bounty.product, tag: tag.name) %>">
          #<%= tag.name.downcase %>
        </a>
      <% end %>
    </span>
  </div>
</div>
