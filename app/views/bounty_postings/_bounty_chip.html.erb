<div class="hover-toggle-wrapper">
  <% if staff? %>
    <div class="hover-toggle-target" data-react-class="BountyFlagButton" data-react-props="<%= {
      bounty: { id: bounty.id },
      url: product_wip_flag_path(bounty.product, bounty)
    }.to_json %>"></div>
  <% end %>

  <a href="<%= product_wip_path(bounty.product, bounty) %>">
    <h4 class="alpha omega"><%= bounty.title %></h4>
    <ul class="list-inline">
      <li class="text-warning">
        <span class="icon icon-app-coin"></span>
        <span class="js-coins"><%= number_with_delimiter(WipContracts.new(bounty, @auto_tip_contracts).earnable_cents.floor) %></span>
      </li>

      <li class="text-muted">
        Created by @<%= bounty.user.username %>
      </li>
    </ul>

    <% if description = bounty.sanitized_description %>
      <p class="omega" style="color:#333"><%= description.truncate(220) %></p>
    <% end %>
  </a>
</div>