<% title 'Blog' %>
<% activate_nav! :platform_discover %>
<% activate_nav! :discover_blog %>

<%= render 'shared/navbar' %>

<div class="page page-flat">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render 'header' %>

        <div class="row">
          <div class="col-md-9">
            <% @posts.each do |post| %>
              <%= render post %>
              <hr/>
            <% end %>
          </div>
          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h6 class="panel-title">Recent Posts</h6>
              </div>

              <div class="list-group">
                <% Post.order(created_at: :desc).limit(10).each do |post| %>
                  <a class="list-group-item small" href="<%= product_post_path(post.product, post) %>">
                    <strong class="text-primary"><%= post.title %></strong>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <%= paginate @posts, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
