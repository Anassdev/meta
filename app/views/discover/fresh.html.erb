<% title 'Fresh Products' %>
<% activate_nav! :platform_discover %>
<% activate_nav! :discover_fresh %>

<%= render 'shared/navbar' %>


<div class="page page-flat">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render 'header' %>

        <div class="row">
          <div class="col-md-9">
            <p class="lead">Each of these products have one week to get <%= Product::PITCH_WEEK_REQUIRED_BUILDERS %> or more people to join the initial team. Products that get enough support go to be built on Assembly.<br/>
              What product will you build?
            </p>
          </div>
          <div class="col-md-3">
            <a href="<%= start_idea_path %>" class="btn btn-default pull-right">Start New Product</a>
          </div>
        </div>

        <div class="list-group list-group-breakout">
          <% @applications.each do |app| %>
            <div class="list-group-item">
              <%= render 'pitch_week/chip', app: app %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
