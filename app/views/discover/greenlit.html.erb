<% title 'Greenlit Products' %>
<% activate_nav! :discover_greenlit %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= render 'header' %>

      <h3 class="text-muted">
        <span class="text-success">Greenlit</span> Products

        <small style="padding-left: 5px">Help popular products build out features and focus on launching.</small>
      </h3>

      <div class="list-group list-group-breakout omega">
        <% @products.each do |product| %>
          <a class="list-group-item"  href="<%= product_path(product) %>">
            <%= render 'products/chips/greenlit', product: product %>
          </a>
        <% end %>
      </div>

      <%= paginate @products, theme: 'twitter-bootstrap-3' %>

      <br>

      <div class="callout text-large">
        <a href="<%= start_idea_path %>" class="btn btn-success pull-right">Create a new product</a>
        Didn't find a product that you're interested in?
        Create your own!
      </div>

    </div>
  </div>
</div>

<%= render 'shared/footer' %>
