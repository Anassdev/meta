<%= form_tag product_wip_comments_path(@wip.product, @wip), method: :post, class: 'form', id: 'new-comment-form' do %>
  <div class="media new-event js-new-event">

    <div class="pull-left">
      <%= avatar_tag(current_user, 30) %>
    </div>

    <div class="media-body" id="comment">
      <div class="js-markdown-editor js-dropzone">
        <%= text_area_tag 'event_comment[body]', nil, class: 'form-control', rows: 1,
        placeholder: "Have a thought or question about #{@product.name}? We'd love to hear from you", disabled: (!signed_in?)  %>
      </div>
    </div>
  </div>
<% end %>

<% unless signed_in? %>
  <script>
    $('#new-comment-form').popover({
      html: true,
      content: 'Before you can introduce yourself, you need to <a href="/signup">sign up</a>.',
      trigger: 'click',
      title: 'Welcome to the chat',
      placement: 'top'
    });
    $('#new-comment-form').popover('show');
  </script>
<% end %>
