<table class="row">
  <tbody>
    <tr>
      <td class="wrapper last">
        <table class="twelve columns">
          <tbody>
            <tr>
              <td class="panel panel-default">

                <table>
                  <tr>
                    <td width="200"></td>
                    <td>
                      <a href="<%= user_url(@invitor) %>">
                        <%= image_tag(@invitor.avatar.url(120), width: 60, height: 60, class: 'img-circle') %>
                      </a>
                    </td>
                    <td width="200"></td>
                  </tr>
                </table>

                <h1 class="text-center">
                  <a href="<%= user_url(@invitor) %>">
                    @<%= @invitor.username %>
                  </a>
                  wants you to help out on Assembly. There's <%= pluralize(@invite.tip_cents / 100, "#{@product.name} coin") %> waiting for you.
                </h1>

                <br/>

                <table class="button success radius">
                  <tr>
                    <td>
                      <a href="<%= product_wip_url(@product, @via) %>">Check it out</a>
                    </td>
                  </tr>
                </table>

              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
