<% title 'Projects', @product.name %>
<%= render 'shared/navbar' %>
<%= render 'products/navbar' %>

<div class="page">
  <div class="container">
    <%= render 'products/alert' %>

    <div class="page-header">
      <div class="pull-right">
        <a class="btn btn-success" href="<%= new_product_milestone_path(@product) %>">
          Start a new project
        </a>
      </div>

      <h2 class="page-header-title">
        <i class="icon-rocket text-muted" style="vertical-align: text-bottom; margin-right: 4px;"></i>
        Projects
      </h2>

      <div class="page-header-meta">
        <ul class="list-inline list-inline-piped">
          <li>
            <a href="<%= product_milestones_path(@product) %>">
              <%= @product.milestones.open.count %> open
            </a>
          </li>
          <li>
            <a href="<%= product_milestones_path(@product, filter: 'closed') %>">
              <%= @product.milestones.closed.count %> closed
            </a>
          </li>
        </ul>
      </div>
    </div>

    <% if @milestones.empty? %>
      <div class="row">
        <div class="col-md-6 col-xs-6 col-md-offset-3 col-xs-offset-3">
          <div class="well well-lg omega">
            <h3 class="alpha"><strong>Organize your work into Projects</strong></h3>
            <p class="text-muted omega">
              Projects give you a great way to organize tasks. For example, you could make projects for the main screens
              in <%= @product.name %>. This helps people quickly grasp the vision.
            </p>
          </div>
        </div>
      </div>
    <% else %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Project</th>
            <th></th>
            <th class="text-right" style="padding-right: 30px;">Bounties</th>
            <th>Completion</th>
          </tr>
        </thead>
        <% @milestones.each do |milestone| %>
          <% cache [milestone, milestone.wip] do %>
            <tr>
              <td>
                <% if urgency = milestone.urgency %>
                  <span class="label label-<%= urgency.slug %>"><%= urgency.label %></span>
                <% end %>
              </td>
              <td>
                <a href="<%= product_milestone_path(milestone.product, milestone.wip) %>"><strong><%= milestone.wip.title %></strong></a>
              </td>
              <td>
                <% if milestone.milestone_images.any? %>
                  <% url = File.join(firesize_url, "60x60", "g_north", "frame_0", URI.escape(milestone.feature_image.attachment.url)) %>
                  <%= image_tag url, width: 60, height: 60 %>
                <% end %>
              </td>
              <td class="text-right" style="padding-right: 30px;">
                <strong class="text-success"><%= milestone.tasks.closed.count %></strong>
                <span class="text-muted">
                  /
                  <%= milestone.tasks.count %>
                </span>
              </td>
              <td>
                <div class="progress omega" style="min-width:200px">
                  <div class="progress-bar progress-bar-success" style="width:<%= number_to_percentage(milestone.progress * 100, precision: 0) %>">
                    <% if milestone.progress > 0 %>
                      <%= number_to_percentage(milestone.progress * 100, precision: 0) %>
                    <% end %>
                  </div>

                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
