<% title 'Activity', @product.name %>
<% activate_nav! 'activity' %>

<div class="sheet-body">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <% unless @news_feed_items.empty? %>
        <% @news_feed_items.each do |item| %>
          <div data-react-class="NewsFeedItem" data-react-props="<%= item.to_json %>">
          </div>
        <% end %>
      <% else %>
        <div class="well text-center">
          There hasn't been any activity on this product yet. Why not <a href="<%= product_wips_path(@product) %>">start some tasks</a>?
        </div>
      <% end %>
    </div>
  </div>
</div>
