<% title 'Assembly Badges' %>
<%= render 'shared/navbar' %>

<div class="page">

<% badges = [
  [ { name: "Flag",
    desc: "The original swag flag",
    minHeight: "41px;",
    width: "25%",
    type: "flag",
    defaultWidth: "61px",
