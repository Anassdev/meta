<% title "The world's platform for crowd-founding software products" %>

<header class="header-home">
  <div class="nav-section">
    <div class="container">
      <nav class="col-6">
        <a class="navbar-logo" href="<%= root_path %>">
          <div class="logo-wordmark logo-wordmark-light">
            Assembly
          </div>
        </a>
        <a class="btn btn-see-through" href="<%= login_path %>">
          Log in
        </a>
      </nav>
    </div>
  </div>
  <div class="container">
    <hgroup class="col-4">
      <h1>Apps made by anyone, owned by everyone.</h1>
      <h2>Assembly is an open platform for crowd-<i>founding</i> software products.</h2>
    </hgroup>
    <div class="sign-up col-2">
      <div class="section facebook">
        <div class="facebook-signin-form">

          <a class="btn btn-default btn-facebook btn-block btn-large facebook-signin">
            <span>
              Sign up with Facebook
            </span>
          </a>

          <a class="btn btn-default btn-facebook btn-block btn-large facebook-busy" style="display: none">
            <span>
              Connecting...
            </span>
          </a>

        </div>

      </div>

      <div class="signin-or signin-or-light">
        <span>OR</span>
      </div>

      <div class="new-user">
        <div class="email-signup">
          <%= ajax_form_for(:user, url: new_user_registration_path, redirect: after_sign_up_path_for_user, html: { class: 'form-horizontal' }) do |f| %>
            <%= hidden_field_tag 'user[follow_product]' %>

            <div class="form-group input-group-control">
              <input type="text" class="form-control" name="user[username]" autocomplete="off" autofocus="true" placeholder="Choose a username">
              <input type="email" class="form-control" name="user[email]" autocomplete="off" placeholder="Your email">
              <input type="password" class="form-control" name="user[password]" placeholder="Create a password">
            </div>

            <div class="sign-up-submit">
              <button class="btn btn-large btn-default btn-block" data-disable-with="Signing up...">
                Sign up
              </button>

              <%= render 'users/sessions/disclaimer' %>
            </div>
          <% end %>
        </div>

        <div class="facebook-signup-form" style="display: none">
          <div class="user medium light">
            <div class="avatar">
              <img src="//www.gravatar.com/avatar/default?s=40">
            </div>
            <div class="name"></div>
            <div class="location"></div>
          </div>

          <%= ajax_form_for(:user, url: new_user_registration_path, redirect: after_sign_up_path_for_user) do |f| %>
            <%= f.hidden_field :facebook_uid %>
            <%= f.hidden_field :extra_data %>
            <%= f.hidden_field :location %>
            <%= f.hidden_field :name %>
            <%= hidden_field_tag 'user[follow_product]' %>

            <div class="form-group input-group-control">
              <input type="text" class="form-control" id="user_username" name="user[username]" autocomplete="off" autofocus="true" placeholder="Choose a username">
              <input type="email" class="form-control" id="user_email" name="user[email]" autocomplete="off" placeholder="Your email">
            </div>

            <div class="sign-up-submit">
              <button class="btn btn-large btn-default btn-block">
                Sign up
              </button>

              <%= render 'users/sessions/disclaimer' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<% ab_test(SplitTests::HOMEPAGE_VARIATION, 'three-features', 'how-it-works') do |variation| %>
  <script>analytics.track('home.viewed', {"variation": "<%= variation %>"});</script>
  <% if variation == 'how it works' %>
    <div class="container">
      <div class="feature-list">
        <center class="feature row">
          <h2>How it works</h2>
          <div class="col-4 col-offset-1">
            <p>
              Designers and developers all over the world openly develop real software products on Assembly. At the end of every month revenue is collected and the proceeds are split among the people that built it.
            </p>
          </div>
        </center>
      </div>
    </div>
  <% else %>
  <div class="container">
      <div class="feature-list">
        <center class="feature row">
          <h2>Make something you care about</h2>
          <div class="col-4 col-offset-1">
            <p>
              People share their best ideas for SAAS apps to mobile apps on Assembly.
              <br/>
              Jump-in and help code and design the ones you love or share your own.
            </p>
          </div>
        </center>

        <center class="feature row">
          <h2>Build greater thingsâ€”together</h2>
          <div class="col-4 col-offset-1">
            <p>
              Never build alone again. Collaborate when and where you want with a community of great developers and designers all around the world.
            </p>
          </div>
        </center>

        <center class="feature row">
          <h2>Learn new skills &amp; share in success</h2>
          <div class="col-4 col-offset-1">
            <p>
              Development is open so you can tackle new challenges. Assembly transparently splits apps' profits at the end of every month with everyone that built it.
            </p>
          </div>
        </center>
      </div>
    </div>
  <% end %>
<% end %>

<div class="call-to-action">
  <div class="container">
    <div class="row">
      <h3 class="col-4"><strong>Join Assembly.</strong> It takes less than a minute.</h3>
      <div class="col-2">
        <a class="btn btn-large btn-primary btn-accent btn-block pull-right" href="<%= new_user_registration_path %>" data-authenticate="signup">Sign up</a>
      </div>
    </div>
  </div>
</div>

<center class="container">
  <div class="row">
    <p class="email-block">Have any questions or concerns? <a href="mailto:assembly@helpful.io">Shoot us an email</a>.</p>
  </div>
</center>

<%= render 'shared/deprecated_footer' %>
