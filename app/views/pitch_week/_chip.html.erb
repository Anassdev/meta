<% product = app.product %>
<div class="chip">
  <div class="row">
    <div class="col-xs-1">
      <%= image_tag product.poster_image.url, class: 'img-rounded', height: 24, alt: product.name %>
    </div>

    <div class="col-xs-8">
      <%= render 'products/faces', product: product %>

      <a href="<%= product_path(product) %>"><strong><%= product.name %></strong></a>
      &nbsp;
      <%= product.pitch %>
      <div>
        <span class="text-muted text-small">Updated <%= time_ago_in_words(product.updated_at) %> ago</span>
      </div>
    </div>

    <div class="col-xs-3">
      <div class="progress progress-small omega">
        <div class="progress-bar progress-bar-success" style="width: <%= percentage(product.bio_memberships_count / Product::PITCH_WEEK_REQUIRED_BUILDERS.to_f) %>;">
        </div>
      </div>
      <span>
        <%= product.bio_memberships_count %> / <%= Product::PITCH_WEEK_REQUIRED_BUILDERS %> building
      </span>
      <span class="pull-right">
        <%= time_ago_in_words app.pitch_week_end %> to go
      </span>
    </div>
  </div>
</div>
