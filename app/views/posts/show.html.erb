<% title @post.title, @post.product.name %>
<% activate_nav! :posts %>

<script id="heartables" type="application/json">
  <%== @heartables.to_json %>
</script>

<% if @user_hearts %>
  <script id="user_hearts" type="application/json">
    <%== @user_hearts.map{|h| {
        id: h.id,
        heartable_id: h.heartable_id,
      }}.to_json
    %>
  </script>
<% end %>

<% nfi = NewsFeedItemSerializer.new(@post.news_feed_item) %>
<div data-react-class="NewsFeedItem" data-react-props="<%= nfi.as_json.merge({
  commentable: true,
  enableModal: false,
  productPage: true,
  rows: 2,
  showAllComments: true
}).to_json %>"></div>


