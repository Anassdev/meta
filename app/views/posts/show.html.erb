<% title @post.title, @post.product.name %>
<% activate_nav! :posts %>

<script id="heartables" type="application/json">
  <%== @heartables.to_json %>
</script>

<%= render 'shared/user_data' %>

<% nfi = NewsFeedItemSerializer.new(@post.news_feed_item) %>
<div data-react-class="NewsFeedItem" data-react-props="<%= nfi.as_json.merge({
  commentable: true,
  enableModal: false,
  productPage: true,
  rows: 2,
  showAllComments: true
}).to_json %>"></div>


