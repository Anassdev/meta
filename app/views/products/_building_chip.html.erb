<div class="chip">
  <div class="row">
    <div class="col-xs-1">
      <%= image_tag product.poster_image.url, class: 'img-rounded', height: 24, alt: product.name %>
    </div>

    <div class="col-xs-8">
      <%= render 'products/faces', product: product %>

      <a href="<%= product_path(product) %>"><strong><%= product.name %></strong></a>
      &nbsp;
      <%= product.pitch %>
      <div>
        <span class="text-muted text-small">Updated <%= time_ago_in_words(product.updated_at) %> ago</span>
      </div>


    </div>

    <div class="col-xs-offset-1 col-xs-1 text-center">
      <div><a class="text-subtle-link" href="<%= product_people_path(product) %>">
        <strong>+ <%= product.bio_memberships_count %></strong>
      </a></div>
      <a class="text-subtle-link" href="<%= product_people_path(product) %>">
        <span class="text-muted">building</span>
      </a>
    </div>

    <div class="col-xs-1 text-center">
      <div><a class="text-subtle-link" href="<%= product_people_path(product) %>">
        <strong>+ <%= product.watchings_count %></strong>
      </a></div>
      <a class="text-subtle-link" href="<%= product_people_path(product) %>">
        <span class="text-muted">signups</span>
      </a>
    </div>
  </div>
</div>
