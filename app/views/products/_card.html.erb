<div class="card">
  <% if product.poster? %>
    <%= image_tag firesize(product.poster_image.url, '500x500', 'g_center'), width: '100%' %>
  <% else %>
    <%= image_tag image_path('app_icon.png'), width: '100%' %>
  <% end %>

  <div class="card-body" style="min-height:109px">
    <h5 class="alpha omega" style="color:#333"><%= product.name %></h6>
    <p class="text-muted alpha omega"><%= product.pitch %></p>
  </div>


  <div class="card-footer clearfix">
    <ul class="list-grid">
      <% product.followers.limit(12).each do |user| %>
        <li>
          <%= avatar_tag(user, size: 19) %>
        </li>
      <% end %>
      <li>
        <span class="badge">+ <%= product.followers.count %></span>
      </li>
    </ul>

    <p class="small text-muted omega">Started <%= product.created_at.strftime("%B %d, %Y") %></p>

  </div>
</div>
