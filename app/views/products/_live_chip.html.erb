<div class="chip">
  <div class="row">
    <div class="col-xs-1">
      <%= image_tag product.poster_image.url, class: 'img-rounded', height: 24, alt: product.name %>
    </div>

    <div class="col-xs-8">
      <%= render 'products/faces', product: product %>

      <a href="<%= product_path(product) %>"><strong><%= product.name %></strong></a>
      &nbsp;
      <%= product.pitch %>
      <div>
        <span class="text-muted text-small">Updated <%= time_ago_in_words(product.updated_at) %> ago</span>
      </div>
    </div>

    <div class="col-xs-1 col-xs-offset-1 text-center">
      <div>
        <a class="text-subtle-link" href="<%= product_partners_path(product) %>">
          <strong>+ <%= product.partners_count %></strong></div>
        </a>
        <a class="text-subtle-link" href="<%= product_partners_path(product) %>">
          <span class="text-muted">partners</span>
        </a>
    </div>

    <div class="col-xs-1 text-center">
      <a class="text-subtle-link" href="<%= product_financials_path(product) %>">
        <div><strong><%= short_currency product.profit_reports.order(:end_at).last.try(:revenue) %>
        </strong></div>
      </a>

      <a class="text-subtle-link" href="<%= product_financials_path(product) %>">
        <span class="text-muted">monthly</span>
      </a>
    </div>
  </div>
</div>
