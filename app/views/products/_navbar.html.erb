<ul class="nav nav-tabs">

  <% unless @product.meta? %>
  <li class="<%= nav_active_class(:idea) %>">
    <a href="<%= product_path(product) %>">
      <span class="icon icon-compass icon-left"></span>
      Idea
    </a>
  </li>
  <% end %>

  <li class="<%= nav_active_class(:posts) %>">
    <a href="<%= product_posts_path(product) %>">
      <span class="icon icon-pin icon-left"></span>
      Posts
    </a>
  </li>

  <% if current_user && current_user.staff? %>
    <li class="<%= nav_active_class(:updates) %>">
      <a href="<%= product_updates_path(product) %>">
        <span class="icon icon-graph icon-left"></span>
        Updates
      </a>
    </li>
  <% end %>

  <li class="<%= nav_active_class(:bounties) %>">
    <a href="<%= product_wips_path(product) %>">
      <span class="icon icon-trophy icon-left"></span>
      Bounties
    </a>
  </li>

  <% unless @product.meta? %>
  <li class="<%= nav_active_class(:people) %>">
    <a href="<%= product_people_path(product) %>">
      <span class="icon icon-users icon-left"></span>
      Team
    </a>
  </li>
  <% end %>
  <% if chat_room = @product.chat_rooms.first%>
    <li>
      <a target="_blank" href="<%= chat_room_path(chat_room) %>">
        <span class="icon icon-bubble icon-left"></span>
        Live chat
      </a>
    </li>
  <% end %>



</ul>
