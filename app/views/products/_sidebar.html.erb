<% if @product.poster? %>
  <img class="img-rounded" src="<%= @product.hero_image_path %>" alt="<%= @product.name %>" width="100%">
  <hr>
<% end %>

<div class="panel">
  <div data-react-class="InviteFriendProduct" data-react-props='<%== {
      url: invites_path,
      invites: serialize_hash(@product.invites),
      notePlaceholder: "Hey! Want to help build #{@product.name}",
    }.merge(TypeId.as_json(:via, @product)).to_json %>'>
  </div>
</div>
