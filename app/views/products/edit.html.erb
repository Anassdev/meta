<% title "Editing #{@product.name}" %>

<div class="row">
  <div class="col-md-12 col-xs-12">
    <%= form_for @product do |f| %>

      <h6 class="text-muted">Product Basics</h6>

      <%= f.label :name, 'Product name', class: 'form-label' %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', maxlength: 255, autocomplete: 'off' %>
          </div>

          <div class="form-group">
            <%= f.label :pitch, '5 word pitch', class: 'form-label' %>
            <%= f.text_field :pitch, class: 'form-control', placeholder: @four_word_story_example %>
          </div>

          <div class="form-group">
            <%= f.label :description, 'The story behind the idea', class: 'form-label' %>
            <%= f.text_area :description, class: 'form-control', rows: 2, data: { autosize: '', 'validate-length' => 2 } %>
          </div>
        </div>

        <div class="col-md-4">
          <p class="help-block alpha">
            A name is important, but it can always change. If you have a codename already, use that, otherwise don't get too hung up on making it perfect.
          </p>
        </div>
      </div>

      <hr id="story">

      <h6 class="text-muted">The Vision</h6>

      <%= f.label :goals, 'Goals', class: 'form-label' %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <%= f.text_area :goals, class: 'form-control', data: { autosize: '' }, rows: 2 %>
          </div>

          <div class="form-group">
            <%= f.label :key_features, 'Key Features', class: 'form-label' %>
            <%= f.text_area :key_features, class: 'form-control', data: { autosize: '' }, rows: 2 %>
          </div>

          <div class="form-group">
            <%= f.label :target_audience, 'Target Audience', class: 'form-label' %>
            <%= f.text_area :target_audience, class: 'form-control', data: { autosize: '' }, rows: 2 %>
          </div>

          <div class="form-group">
            <%= f.label :competing_products, 'Competing Products', class: 'form-label' %>
            <%= f.text_area :competing_products, class: 'form-control', data: { autosize: '' }, rows: 2 %>
          </div>

          <div class="form-group">
            <%= f.label :competitive_advantage, 'Competitive Advantage', class: 'form-label' %>
            <%= f.text_area :monetization_strategy, class: 'form-control', data: { autosize: '' }, rows: 2 %>
          </div>
        </div>

        <div class="col-md-4">
          <p class="help-block alpha">
            The vision. For the future.
          </p>
        </div>
      </div>


      <hr id="sundry">

      <h6 class="text-muted">Sundry</h6>

      <div class="form-group">
        <%= f.label :homepage_url, 'Product homepage url', class: 'form-label' %>
        <%= f.text_field :homepage_url, class: 'form-control', maxlength: 255 %>
      </div>

      <div class="form-group">
        <%= f.label :you_tube_video_url, 'YouTube Video URL', class: 'form-label' %>
        <%= f.text_field :you_tube_video_url, class: 'form-control', maxlength: 255 %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="col-md-3 col-xs-3 col-md-offset-1 col-xs-offset-1">

  </div>
</div>
