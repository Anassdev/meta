<% title @faq_group.name, 'FAQ' %>
<% activate_nav! :platform_faq %>
<%= render 'shared/navbar' %>

<% cache FaqGroup.cache_key(@faq_group) do %>
  <div class="page page-flat">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">

          <div class="page-header">
            <ol class="breadcrumb omega">
              <li class="active">FAQ</li>
              <li></li>
            </ol>
            <h1 class="alpha"><%= @faq_group.name %></h1>
          </div>

          <div class="row">
            <div class="col-md-8 col-xs-8 copy">
              <ul class="list-unstyled">
                <% @faq_group.questions.each do |question| %>
                  <li class="question">
                    <%= link_to question[:name], anchor: question[:anchor] %>
                  </li>
                <% end %>
              </ul>

              <hr style="margin-bottom: 48px">

              <%= @faq_group.body.html_safe %>
            </div>

            <div class="col-xs-4">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h6 class="panel-title">Areas</h6>
                </div>
                <ul class="nav nav-pills nav-stacked">
                  <% @faq_groups.each do |faq_group| %>
                    <li class="<%= ('active' if @faq_group.slug == faq_group.slug) %>">
                      <%= link_to faq_group.name, help_path(faq_group) %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/footer' %>
