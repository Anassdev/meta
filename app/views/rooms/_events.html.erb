<div class="timeline">
  <% events = Event.render_events(room.target.events.order(:number), current_user) %>
  <% events.each.with_index do |(event, html), i| %>
    <% if i == events.size - 1 && i > 0 %>
      <div class="timeline-insert js-timestamp">
        <time class="timestamp" datetime="<%= event.created_at.iso8601 %>"></time>
      </div>
    <% end %>

    <div class="timeline-item">
      <%== html %>
    </div>

  <% end %>
</div>
