<div class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#platform-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="text-brand navbar-brand" href="<%= root_path %>">
        <span class="brand">
          <span class="icon icon-logo-filled"></span>
          <% if !user_signed_in? %>
            Assembly
          <% end %>
        </span>
      </a>
    </div>

    <div class="collapse navbar-collapse" id="platform-navbar-collapse">

      <% if user_signed_in? %>
        <form action="<%= scoped_search_path %>" class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" name="q" value="<%= params[:q] %>" class="form-control" autocomplete="off"
              placeholder="<%= @product ? "Search #{@product.name}" : "Searchâ€¦" %>"  />
            <input type="hidden" name="type" value="<%= @type %>">
          </div>
          <button type="submit" class="btn btn-default sr-only">Search</button>
        </form>
      <% end %>

      <ul class="nav navbar-nav">

        <li class="<%= nav_active_class(:discover_bounties) %>">
          <a href="<%= discover_path(:bounties) %>">Bounties</a>
        </li>

        <li class="<%= nav_active_class(:community) %>">
          <a href="<%= chat_rooms_path %>">Community Chat</a>
        </li>

        <li class="<%= nav_active_class(:platform_create) %>">
          <a href="<%= new_product_path %>">Create</a>
        </li>
      </ul>

        <% if user_signed_in? %>
          <div
              class="navbar-right"
              data-react-class="Navbar"
              data-react-props="<%= {
                newsFeedPath: notifications_path(format: :json),
                chatPath: chat_rooms_path,
                userPath: user_path(current_user),
                editUserPath: edit_user_path,
                balancePath: users_balance_path,
                destroyUserSessionPath: destroy_user_session_path
              }.to_json %>">
        <% else %>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <li>
                <a href="<%= new_user_session_path %>">
                  Log in
                </a>
              </li>
            </ul>

            <a class="btn btn-success navbar-btn" href="<%= new_user_registration_path %>">Sign up</a>
          </div>
        <% end %>

        </ul>
      </div>
    </div>
  </div>
  <% if @product && !user_signed_in? %>
    <div data-react-class="ProductBanner" data-react-props="<%= { productName: @product.name }.to_json %>" style="text-align: center; width: 100%;">
    </div>
  <% end %>
</div>
