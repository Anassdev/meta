<div class="navbar
  <% if user_signed_in? %>
    navbar-inverse
  <% else %>
    navbar-default
  <% end %>
  navbar-static-top" data-headroom data-tolerance="5" data-offset="205" data-classes="{"initial":"animated","pinned":"slideDown","unpinned":"slideUp","top":"headroom--top","notTop":"headroom--not-top"}">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#platform-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="text-brand navbar-brand" href="<%= root_path %>">
        <span class="brand">
          <span class="icon icon-logo"></span>
          <% if !user_signed_in? %>
            Assembly
          <% end %>
        </span>
      </a>
    </div>

    <div class="collapse navbar-collapse" id="platform-navbar-collapse">

      <form action="<%= search_path %>" class="navbar-form navbar-left" style="<% if user_signed_in? %>padding-left: 4px;<% end %>">
        <div class="form-group">
          <input type="text" name="q" value="<%= params[:q] %>" class="form-control" autocomplete="off"
            placeholder="<%= @product ? "Search #{@product.name}…" : "Search…" %>"  />
          <input type="hidden" name="type" value="<%= @type %>">
        </div>
        <!-- <button type="submit" class="btn btn-default">Search</button> -->
      </form>

      <ul class="nav navbar-nav">

        <li class="<%= 'active' if discover_controller? %>">
          <a href="<%= discover_path %>">Discover</a>
        </li>

        <li>
          <a href="<%= new_product_path %>">Start</a>
        </li>

        <li>
          <a href="<%= faq_path %>">FAQ</a>
        </li>
      </ul>

      <div class="navbar-right">
        <ul class="nav navbar-nav">

          <% if user_signed_in? %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= avatar_tag(current_user, 22) %>
                <span style="margin-left: 5px;"><%= current_user.username %></span>
                <b class="caret"></b>
              </a>

              <ul class="dropdown-menu">
                <li>
                  <a href="<%= user_path(current_user) %>">
                    View Profile
                  </a>
                </li>
                <!-- <li class="divider"></li> -->
                <li>
                  <a href="<%= destroy_user_session_path %>" data-method="delete">
                    Log out
                  </a>
                </li>
              </ul>
            </li>

          <% else %>

            <li>
              <a href="<%= new_user_session_path %>">
                Log in
              </a>
            </li>

            <li>
              <a href="<%= new_user_registration_path %>">
                Sign up
              </a>
            </li>

          <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>
