<div class="navbar navbar-default navbar-static-top omega">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#platform-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">
        <span class="icon icon-logo-filled"></span>
        <span class="sr-only">Assembly</span>
      </a>
    </div>

    <div class="collapse navbar-collapse" id="platform-navbar-collapse">

      <% if user_signed_in? %>
        <form action="<%= scoped_search_path %>" class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" name="q" value="<%= params[:q] %>" class="form-control" autocomplete="off"
              placeholder="<%= @product ? "Search #{@product.name}" : "Searchâ€¦" %>"  />
            <input type="hidden" name="type" value="<%= @type %>">
          </div>
          <button type="submit" class="btn btn-default sr-only">Search</button>
        </form>
      <% end %>

      <ul class="nav navbar-nav">

        <li class="<%= nav_active_class(:discover) %>">
          <a href="<%= discover_path(:trending) %>">Products</a>
        </li>

        <li class="<%= nav_active_class(:discover_bounties) %>">
          <a href="<%= discover_path(:bounties) %>">Bounties</a>
        </li>

        <li class="<%= nav_active_class(:platform_updates) %>">
          <a href="<%= discover_path(:updates) %>">Updates</a>
        </li>
        <li class="<%= nav_active_class(:community) %>">
          <a href="<%= chat_rooms_path %>">Community Chat</a>
        </li>

        <% if @product  && !@product.new_record? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" style="cursor: pointer;">
              <%= @product.name %>
              <span class="icon icon-chevron-down"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% unless nav_active_class(:community) %>
                <li>
                  <a href="<%= chat_room_path(@product) %>">Chat</a>
                </li>
              <% end %>

              <li>
                <a href="<%= product_people_path(@product) %>">Team</a>
              </li>

              <li>
                <a href="<%= product_wips_path(@product) %>">Bounties</a>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>

        <% if user_signed_in? %>
          <div
              class="navbar-right"
              data-react-class="Navbar"
              data-react-props="<%= {
                newsFeedPath: notifications_path(format: :json),
                chatPath: chat_rooms_path,
                userPath: user_path(current_user),
                editUserPath: edit_user_path,
                balancePath: users_balance_path,
                destroyUserSessionPath: destroy_user_session_path
              }.to_json %>">
        <% else %>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <li>
                <a href="<%= new_user_session_path %>">
                  Log in
                </a>
              </li>
            </ul>

            <a class="btn btn-success navbar-btn" href="<%= new_user_registration_path %>">Sign up</a>
          </div>
        <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>
