<div class="navbar navbar-default navbar-static-top omega">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#platform-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">
        <span class="icon icon-logo-filled"></span>
        <span class="sr-only">Assembly</span>
      </a>
    </div>

    <div class="collapse navbar-collapse" id="platform-navbar-collapse">

      <% if user_signed_in? %>
        <%= render 'shared/search' %>
      <% end %>

      <ul class="nav navbar-nav">

        <li class="<%= nav_active_class(:discover) %>">
          <a href="<%= discover_path %>">Products</a>
        </li>

        <% if feature?(:discover_bounties) %>
          <li class="<%= nav_active_class(:discover_bounties) %>">
            <a href="<%= discover_path(:bounties) %>">Bounties</a>
          </li>
        <% end %>

        <li class="<%= nav_active_class(:platform_updates) %>">
          <a href="<%= discover_path(:updates) %>">Updates</a>
        </li>

        <li class="<%= nav_active_class(:community) %>">
          <a href="<%= chat_rooms_path %>">Community Chat</a>
        </li>

        <% if defined? bounties_link %>
          <li class="dropdown">
            <li>
              <a target="_blank" href="<%= product_wips_path(@product) %>"><%= @product.name %> Bounties</a>
            </li>
          </li>
        <% end %>


      </ul>

        <% if user_signed_in? %>
          <div
              class="navbar-right"
              data-react-class="Navbar"
              data-react-props="<%= {
                notificationsPath: notifications_path(format: :json),
                chatPath: chat_rooms_path,
                userPath: user_path(current_user),
                editUserPath: edit_user_path,
                balancePath: users_balance_path,
                destroyUserSessionPath: destroy_user_session_path
              }.to_json %>">
        <% else %>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <li>
                <a href="<%= new_user_session_path %>">
                  Log in
                </a>
              </li>
            </ul>

            <a class="btn btn-success navbar-btn" href="<%= new_user_registration_path %>">Sign up</a>
          </div>
        <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/welcome' %>
