<table class="row">
  <tbody>
    <tr>
      <td class="wrapper last">
        <table class="twelve columns">
          <tbody>
            <tr>
              <td class="panel panel-default">

                <table>
                  <tr>
                    <td width="200"></td>
                    <td>
                      <a href="<%= user_url(@tip.from) %>">
                        <%= image_tag(@tip.from.avatar.url(120), width: 60, height: 60, class: 'img-circle') %>
                      </a>
                    </td>
                    <td width="200"></td>
                  </tr>
                </table>

                <h1 class="center">
                  Sweet! <a href="<%= user_url(@tip.from) %>">
                    @<%= @tip.from.username %>
                  </a>
                  just tipped you <%= pluralize(@tip.cents, 'coin') %> for your
                  <%= @tip.via.is_a?(Activities::Introduce) ? 'introduction' : 'comment' %>
                  on <a href="<%= product_url(@tip.product) %>"><%= @tip.product.name %></a>.
                </h1>

                <%= render partial: "tip_mailer/#{@tip.via.to_partial_path}", object: @tip.via %>

                <br/>

                <table class="button success radius">
                  <tr>
                    <td>
                      <a href="<%= @url %>">Thank @<%= @tip.from.username %>!</a>
                    </td>
                  </tr>
                </table>

              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
