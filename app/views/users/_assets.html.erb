<div class="page-header sheet-header">
  <% if @user %>
    <%= render 'users/overview' %>
  <% end %>
</div>

<div class="sheet-body">
  <% if @assets.any? %>
    <table class="table table-hover table-responsive">
      <thead>
        <th>Product</th>
        <th>Amount</th>
      </thead>
      <tbody>
        <% @assets.each do |product, assets| %>
          <tr>
            <td>
              <a href="<%= product_path(product) %>">
                <img src="<%= firesize(product.poster_image.url, '30x30', 'g_center') %>" width="auto" class="app-icon" style="display: inline; margin-right: 5px;">
                <span class="hidden-xs"><%= product.name %></span>
              </a>
            </td>
            <td>
              <%= assets.reduce(0) { |sum, asset| sum + asset.amount } %> <span class="icon icon-app-coin text-coins"></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="well well-lg dotted">
      <p class="text-centered">
        It looks like you haven't earned any Assembly Assets yet. Check out the <a href="<%= product_path(Product.find_by_slug('assemblycoins')) %>">Assets project</a> to earn your first coins.
      </p>
    </div>
  <% end %>
</div>
