<% if current_user %>
  <%= initial_store_data(
    'UserStore',
    current_user.as_json(only: [:bio, :created_at, :id, :is_staff, :username]).merge(
      avatar_url: current_user.avatar.url(140).to_s,
      isCore: ((@product && @product.core_team?(current_user)) || current_user.is_staff?),
      url: user_path(current_user)
    )
  ) %>
<% end %>
