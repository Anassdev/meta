<% title 'Create an account', 'It takes less than a minute' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="sheet">
        <div class="sheet-body">

          <div class="text-center">
            <h1 class="omega">Create an Assembly account</h1>
            <p class="text-muted">
              <a href="<%= new_user_session_path %>">Already have an account?</a>
            </p>
          </div>

          <br>

          <%= form_for(resource, as: resource_name, url: new_user_registration_path) do |f| %>

            <%= f.hidden_field :avatar_url %>
            <%= f.hidden_field :facebook_uid %>
            <%= f.hidden_field :extra_data %>
            <%= f.hidden_field :location %>
            <%= f.hidden_field :name %>
            <%= hidden_field_tag 'user[follow_product]' %>

            <% if f.object.facebook_uid.blank? %>

              <a class="btn btn-facebook btn-block btn-lg" href="<%= user_omniauth_authorize_path(:facebook) %>">Sign up using Facebook</a>

              <fieldset class="hr-line">
                <legend align="center">OR</legend>
              </fieldset>

            <% else %>
              <div class="well">
                <div class="row">
                  <div class="col-xs-2">
                    <%= image_tag f.object.avatar_url, class: 'img-rounded', width: '100%' %>
                  </div>

                  <div class="col-xs-10">
                    <span class="text-muted">Using Facebook account:</span>
                    <h4 class="alpha omega"><%= f.object.name %></h4>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="form-group <%= 'has-error' if f.object.errors[:username].any? %>">
              <% if f.object.errors[:username].any? %>
                <p class="help-block pull-right">
                  <%= f.object.errors[:username].to_sentence %>
                </p>
              <% end %>

              <%= f.label :username, class: 'control-label' %>
              <%= f.text_field :username, autofocus: true, class: 'form-control input-lg', placeholder: 'jane' %>
            </div>

            <div class="form-group <%= 'has-error' if f.object.errors[:email].any? %>">
              <% if f.object.errors[:email].any? %>
                <p class="help-block pull-right">
                  <%= f.object.errors[:email].to_sentence %>
                </p>
              <% end %>

              <%= f.label :email, class: 'control-label' %>
              <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'jane@example.com', value: params[:email] %>
            </div>

            <div class="form-group <%= 'has-error' if f.object.errors[:password].any? %>">
              <% if f.object.errors[:password].any? %>
                <p class="help-block pull-right">
                  <%= f.object.errors[:password].to_sentence %>
                </p>
              <% end %>

              <%= f.label :password, class: 'control-label' %>
              <%= f.password_field :password, autocomplete: false, class: 'form-control input-lg' %>
              <p class="help-block">
                8 characters minimum. Choose something easy for you to remember but hard for somebody else to guess.
              </p>
            </div>

            <%= f.submit 'Sign up for Assembly', class: 'btn btn-primary btn-block btn-lg' %>
            <p class="text-center small text-muted">
              <br>
              By signing up, you agree to Assembly's <a href="<%= tos_path %>">Terms of Service</a>.
            </p>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
