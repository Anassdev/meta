<div class="dropdown align-right">
  <% if @milestone %>
    <a href="<%= product_milestone_path(@product, @milestone)%>"><%= @milestone.wip.title %></a>
  <% elsif can?(:edit, @wip) %>
    <a class="js-add link-action-success" data-toggle="dropdown" href="#" data-placement="top" title="Add&nbsp;to&nbsp;Project">
      <i class="icon-plus-circled"></i> Project
    </a>
    <script>$('.js-add').tooltip()</script>

    <ul class="dropdown-menu">
      <li class="dropdown-header">Projects</li>
      <% @product.milestones.open.each do |milestone| %>
        <li>
          <a data-remote="true"
             data-method="patch"
             href="<%= product_milestone_add_path(@product, milestone, task_id: @wip.id) %>">
               <%= milestone.wip.title %>
            </a>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
