<% if @bounties && @bounties.any? %>
  <!-- FIXME: If we're expecting paginatable data, we need to safeguard against non-paginatable inputs -->
  <%= initial_store_data(
    'BountiesStore',
    PaginationSerializer.new(
      @bounties.try(:page, 1),
      each_serializer: BountyListSerializer,
      root: :bounties
    ).as_json
  ) %>
<% end %>
