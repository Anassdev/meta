<div class="page-header">

  <div class="pull-right">
    <a class="btn btn-default" href="<%= new_product_wip_path(@wip.product) %>">
      Create a task
    </a>
  </div>

  <ol class="breadcrumb omega">
    <li><a href="<%= product_wips_path(@wip.product) %>">Tasks</a></li>
    <li></li>
  </ol>

  <h2 class="page-header-title">
    <%= @wip.title %>
    <small>#<%= @wip.number %></small>
  </h2>

  <div class="page-header-meta">
    <ul class="list-piped pull-right">
      <li>
        <%= render partial: 'add_to_milestone' %>
      </li>
      <% if can?(:update, @wip) %>
        <li>
          <a href="<%= edit_product_wip_path(@wip.product, @wip) %>">Edit topic</a>
        </li>
        <li class="text-warning">
          <%= link_to 'Move to Discussions', product_task_to_discussion_path(@wip.product, @wip), method: :patch, data: {confirm: 'Are you sure?'} %>
        </li>
      <% end %>
    </ul>

    <div class="js-coin-vote"
         data-view="coin-vote"
         data-vote-path="<%= product_wip_path(@wip.product, @wip) %>/votes"
         data-coins="<%= @wip.coins %>"
         data-coins-add="<%= @wip.coins_add %>"
    >
      <div class="pull-left" style="margin-right: 6px;">
        <% if signed_in? %>
          <a href="#" class="btn btn-default btn-xs js-coin-vote-btn <% if @wip.has_user_voted?(current_user) %>disabled<% end %>">
            <% if @wip.promoted? %>
              <span class="icon icon-double-chevron-up text-promoted"></span>
            <% else %>
              <span class="icon icon-chevron-up"></span>
            <% end %>
          </a>
        <% else %>
          <a href="<%= new_user_registration_path %>" class="btn btn-default btn-xs">
            <% if @wip.promoted? %>
              <span class="icon icon-double-chevron-up text-promoted"></span>
            <% else %>
              <span class="icon icon-chevron-up"></span>
            <% end %>
            <span class="sr-only">Upvote</span>
          </a>
        <% end %>
      </div>

      <ul class="list-piped omega">
        <li>
          <%= format_coins(@wip.product, @wip.real_coin_value) %>
        </li>
        <li>
          Created by
          <a href="<%= user_path(@wip.user) %>">@<%= @wip.user.username %></a>
        </li>
        <li>
          <%= pluralize(@wip.comments.count, 'comments') %>
        </li>
        <li>
          <span class="label label-default"><%= @wip.deliverable.titleize %></span>

          <% if @wip.promoted? %>
            <span class="label label-promoted">Promoted</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
