<% if !signed_in? %>
  <div class="border p3 center rounded">
    <strong><a href="<%= new_user_registration_path %>">Sign up</a> to join the discussion.</strong>
      Already have an account? <a href="<%= new_user_session_path %>">Sign in</a>
  </div>

<% else %>
  <div id="new-comment" class="media js-new-event alpha">

    <div class="pull-left sm-show">
      <%= react_component 'Avatar', user: UserSerializer.new(current_user), size: 30 %>
    </div>

    <div class="media-body ">

      <div id="comment">
        <%= form_tag product_wip_comments_path(@wip.product, @wip), method: :post, class: %w(form new_event_comment) do %>

          <div class="markdown-editor-control js-markdown-editor dropzone js-dropzone">
            <%= text_area_tag 'event_comment[body]', nil, class: 'form-control', placeholder: 'Add to the discussion', rows: 3, "data-product-id" => @wip.product.id %>

            <div class="dropzone-inner js-dropzone-select sm-show">
              To attach files drag &amp; drop here or <a href="#">select files from your computer</a>...
            </div>
          </div>

          <div class="form-actions">
            <ul class="list-inline pull-right">
              <li>
                <% unless @wip.resolved? || @wip.closed? %>
                  <%= button_tag name: 'event_comment[type]', value: 'Event::ReviewReady', type: 'submit', class: %w(btn btn-default), style: 'color: #5cb85c !important' do %>
                    <span class="icon icon-document icon-left"></span>
                    Submit work for review
                  <% end %>
                <% end %>
              </li>

              <li>
                <%= button_tag 'Comment', name: 'event_comment[type]', value: 'Event::Comment', type: 'submit', class: %w(btn btn-primary) %>
              </li>
            </div>
          </div>
        <% end %>
      </div>

    </div><!-- .media-body -->

  </div>
<% end %>
