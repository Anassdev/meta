<% if can? :multiply, task %>
  <div style="display:inline-block;"
       data-react-class="Urgency"
       data-react-props="<%= {
         initialLabel: task.urgency.label,
         urgencies: Urgency.all.map(&:label),
         url: product_task_urgency_path(@product, task)
       }.to_json %>">

<% else %>
  <span class="label label-<%= task.urgency.label.downcase %>"><%= task.urgency.label %></span>
<% end %>

