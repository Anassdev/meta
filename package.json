{
  "name": "meta",
  "version": "0.0.1",
  "description": "Assembly Meta",
  "scripts": {
    "jest": "node_modules/.bin/jest",
    "test": "bin/rake teaspoon && npm run jest",
    "postinstall": "npm run bundle",
    "bundle": "node_modules/.bin/browserify -r underscore -r spin.js -t reactify app/assets/javascripts/components/**.js.jsx -o app/assets/javascripts/components.js",
    "watch": "node_modules/.bin/watchify -r underscore -r spin.js -t reactify app/assets/javascripts/components/**.js.jsx -o app/assets/javascripts/components.js -v"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/assemblymade/meta.git"
  },
  "bugs": {
    "url": "https://github.com/assemblymade/meta/issues"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/spec/javascripts/preprocessor.js",
    "setupEnvScriptFile": "<rootDir>/spec/javascripts/jest_env.js",
    "testDirectoryName": "spec/javascripts/flux",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/underscore"
    ]
  },
  "jshintConfig": {
    "asi": true
  },
  "homepage": "https://assembly.com",
  "dependencies": {
    "browserify": "^5.9.1",
    "jquery": "^2.1.1",
    "moment": "^2.8.1",
    "react": "^0.11.1",
    "react-spinner": "^0.1.9",
    "react-tools": "^0.11.1",
    "reactify": "^0.14.0",
    "spin.js": "^2.0.1",
    "underscore": "^1.6.0"
  },
  "devDependencies": {
    "jest-cli": "^0.1.18",
    "watchify": "^1.0.1"
  },
  "engines": {
    "node": "^0.10.26"
  }
}
